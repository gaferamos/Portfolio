            <p class="card-text">@Personalprjcardinfo</p>
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <a href="/personalprojects" class="btn btn-dark mt-auto">Explorar</a>
            </NavLink>
            
        </div>
    </div>

    <div class="card card3" style="width: 18rem;">
        <img src="images/groupwrk.jpg" class="card-img-top" alt="...">
        <div class="card-body card-body d-flex flex-column">
            <h5 class="card-title">Projetos Em Grupo</h5>

            <p class="card-text">@Groupprjrcardinfo</p>
            <a href="/groupprojects" class="btn btn-dark mt-auto">Explorar</a>
        </div>
    </div>

</div>

@code {
    private string ProjectCardInfo = "Projetos desenvolvidos para explorar novas técnicas e expandir conhecimentos.";

    private string Personalprjcardinfo = "Projetos pessoais desenvolvidos para transformar ideias em código e compartilhá-las com o mundo.";

